// frontend/pages/index.js
import React, { useState } from 'react';

export default function Home() {
  const [recipient, setRecipient] = useState('');
  const [sender, setSender] = useState('');
  const [keywords, setKeywords] = useState('');
  const [message, setMessage] = useState('');

  const generateMessage = async () => {
    const response = await fetch('/api/messages/generate', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ recipient, sender, keywords })
    });
    const data = await response.json();
    setMessage(data.message);
  };

  return (
    <div>
      <h1>AutoMessage AI</h1>
      <input type="text" placeholder="Recipient" value={recipient} onChange={(e) => setRecipient(e.target.value)} />
      <input type="text" placeholder="Sender" value={sender} onChange={(e) => setSender(e.target.value)} />
      <input type="text" placeholder="Keywords" value={keywords} onChange={(e) => setKeywords(e.target.value)} />
      <button onClick={generateMessage}>Generate Message</button>
      <p>{message}</p>
    </div>
  );
}
